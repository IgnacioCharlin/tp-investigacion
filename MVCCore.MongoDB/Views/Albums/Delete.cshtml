@model MVCCore.MongoDB.Models.Album

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4 text-center">Elminar Album</h1>

<h3 class="text-danger fw-bold">¿Estas seguro que deseas elminarlo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nombre del Album</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlbumName)
        </dd>
        <dt class = "col-sm-2">Artista</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class = "col-sm-2">Fecha de Creación</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">Duración</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
        <a asp-action="Index" class ="btn btn-primary">Cancelar</a>
    </form>
</div>
