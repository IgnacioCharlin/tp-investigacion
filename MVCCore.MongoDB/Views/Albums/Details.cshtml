@model MVCCore.MongoDB.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4 text-center">Ver Detalles</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nombre del Album</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlbumName)
        </dd>
        <dt class = "col-sm-2">Artista</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist)
        </dd>
        <dt class = "col-sm-2">Fecha</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">Duración</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</div>
